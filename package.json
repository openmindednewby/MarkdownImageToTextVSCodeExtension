{
  "name": "markdown-image-to-text",
  "displayName": "MarkdownImageToText",
  "description": "Simple extension that will generate the text from an image link inside your markdown file",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:markdown-image-to-text.getTextFromImage"
  ],
  "main": "./out/extension.js",
  "publisher": "DemetriosLoizides",
  "contributes": {
    "languages": [
      {
        "id": "markdown",
        "extensions": [".md"],
        "aliases": ["Markdown"]
      }
    ],
    "commands": [
      {
        "command": "markdown-image-to-text.getTextFromImage",
        "title": "Extract Text from Markdown Image"
      },
      {
        "command": "markdown-image-to-text.getTextFromAllImages",
        "title": "Extract Text from All Images in Markdown file"
      }
    ],
    "configuration": {
      "title": "Markdown Image to Text",
      "properties": {
        "markdownImageToText.maxConcurrentWorkers": {
          "type": "number",
          "default": 4,
          "minimum": 1,
          "description": "Maximum number of concurrent OCR workers."
        },
        "markdownImageToText.throttleDelayMs": {
          "type": "number",
          "default": 5,
          "minimum": 0,
          "description": "Throttle delay in milliseconds between image OCR tasks."
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openmindednewby/MarkdownImageToTextVSCodeExtension"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "tesseract.js": "^5.1.1"
  }
}
